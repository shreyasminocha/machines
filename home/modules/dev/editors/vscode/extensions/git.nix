_: {
  extensions = [ ];
  settings = {
    "git.autofetch" = true;
    "git.defaultCloneDirectory" = "~/dev/";
    "git.enableCommitSigning" = true;
    "git.inputValidation" = true;
    "git.promptToSaveFilesBeforeCommit" = "always";
    "git.showPushSuccessNotification" = true;
    "git.openRepositoryInParentFolders" = "never";
  };
}
