  linebreak = true;
  showbreak = "    ";
  textwidth = 0;
  showmatch = true;
  visualbell = true;

  smartcase = true;
  ignorecase = true;

  shiftwidth = 4;
  smartindent = true;
  tabstop = 4;
  softtabstop = 4;

  undolevels = 1000;

  expandtab = true;
